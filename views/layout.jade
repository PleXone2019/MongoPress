  head
    title= title
    link(rel='stylesheet', href='/css/xtyle.css')
    link(rel='stylesheet', href='/css/nodepress.css')
  body
    div.center(style="background: #ee7962", class="container")
      h1.padding2x(style="font-size: 400%")
        a(href='/') { NodePress }
      form( method="post")
        div
            div
              input.border-radius(type="text", name="title", id="editArticleTitle", placeholder="Title")
