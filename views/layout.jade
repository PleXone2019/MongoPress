              textarea.border-radius( name="body", rows=20, id="editArticleBody", style="height: 50px", placeholder="Your awesome content...")
            div#editArticleSubmit
                input.border-radius(type="submit", value="Post Now!", style="padding: 8px 40px")


    block mainContent




